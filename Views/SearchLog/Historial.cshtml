@using BookRadarApp.Models.DTO
@model List<HistorialBusquedaDTO>

@{
    ViewData["Title"] = "Historial de búsquedas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-lg mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="bg-white shadow-sm rounded p-4">
                <h2 class="mb-4">Historial de búsquedas</h2>

                @if (Model?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th>Autor</th>
                                    <th>Título</th>
                                    <th>Fecha de búsqueda</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Autor</td>
                                        <td>@item.Titulo</td>
                                        <td>@item.FechaBusqueda.ToString("yyyy-MM-dd HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">No hay registros disponibles.</div>
                }
            </div>
        </div>
    </div>
</div>